<% if flash[:alert] %>
    <div class="alert alert-danger" role="alert"> 
    <p class="text-center"><%= flash[:alert] %></p>
    </div>
<% end %>

<h1>Listing movies</h1>
    <div class="row">
      <div class="col-md-10"></div>
      <div class=""><a type="button" class="btn btn-primary" href="/movies/new">New Movie</a></div>
    </div>
<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr> 
      <td><strong>Name</strong></td>
      <td><strong>Director</strong></td>
      <td><strong>Star</strong></td>
      <td><strong>Genre</strong></td>
      <td><strong>Release Date</strong></td>
      <td><strong>Action</strong></td>
    </tr>
    <% @movies.each do |movie| %>
      <tr>

        <td><%= movie.name %></td>
        <td><%= movie.director %></td>
        <td><%= movie.star %></td>
        <td><a href="/genres/<%=movie.genre.id%>"><%= movie.genre_name %></a></td>
        <td><%= movie.release_date %></td>
        
        <td><a class="btn btn-info btn-xs" href="/movies/<%= movie.id %>"> Show</span></a></td>
        
      </tr>
    <% end %>
  </tbody>
</table>
