<div class="jumbotron">
    <h1 class="text-center "><%= @movie.name %></h1>
    <div class='row'>
        <div class="col-sm-2"><h4><strong>Director: </strong></h4></div>
        <div class="col-sm-2"><h4><%= @movie.director %> </h4></div>
        <div class="col-sm-2 col-sm-offset-3"><h4><strong>Star: </h4></strong></div>
        <div class="col-sm-3"><h4><%= @movie.star %> </h4></div>
    </div>
    <div class="row">
        <div class="col-sm-2"><h4><strong>Release Date: </strong></h4></div>
        <div class="col-sm-2"><h4><%= @movie.release_date %> </h4></div>
        <div class="col-sm-2 col-sm-offset-3"><h4><strong>Genre: </h4></strong></div>
        <div class="col-sm-3"><h4><a href="/genres/<%= @movie.genre.id%>"><%= @movie.genre_name %></a> </h4></div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3" style="padding-top: 50px">
            <a href="/movies" class="btn btn-primary btn-lg btn-block">Back </a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3" style="padding-top: 30px">
            <a href="/movies/edit/<%= @movie.id%>" class="btn btn-info btn-lg btn-block">Edit Movie </a>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3" style="padding-top: 30px">
        <form method="post" action="/movies/destroy">
            <input type="hidden" name="_method" value="delete">
            <button type="submit" class="btn btn-danger btn-lg btn-block">Delete Movie</button>
        </form>
        </div>
    </div>
</div>
